/* pages/home/home.wxss */

.title {
  font-size: 43rpx;
  font-family: 'Gill Sans';
  font-weight: bold;
}

.content {
  font-size: 33rpx;
  font-family: 'Gill Sans';
}

.box {
  display: block;
  flex-direction: column;
  background-color: white;
  border-radius: 5rpx;
  color: #4a4a4a;
  padding:25rpx 25rpx 25rpx 25rpx;
  margin: 10rpx 10rpx 10rpx 10rpx;
  box-shadow: 20rpx 20rpx 20rpx;
}

.productContainer {
  display: flex;
  flex-direction: column;
  padding: 20rpx 15rpx 10rpx 15rpx;
  background-color: #ff9f33;
  margin: 20rpx 10rpx 5rpx 10rpx;
}

.product-big-container {
  display: flex;
  flex-direction: column;
}

.homeContainer {
  display: flex;
  flex-direction: row;
  padding: 30rpx 100rpx 500rpx 10rpx;
}

.swiper-image-class {
  width: 100rpx;
  height: 90rpx;
}

.swiper-title {
  font-size: 22rpx;
  font-family: 'Gill Sans';
}

.little-swiper {
  width: 100rpx;
  padding: 0rpx 10rpx 10rpx 10rpx;
}

.swiper-class {
  width: 100%;
  height: 500rpx;
  padding: 0rpx 10rpx 10rpx 0rpx;
  margin: 10rpx 0rpx 10rpx 0rpx;
}

.much-left {
  display: flex;
  flex-direction: column;
}
